.shade_panel
  width 100%
  height 100%
  background-color rgba(0, 0, 0, .4)
  .login-box
    border-radius 10px
    background-color white
@media screen and (max-width: 767px)
  .shade_panel
    display flex
    justify-content center
    align-items center
    .login-box
      width 50%
      min-width 200px
      height 50%
@media screen and (min-width: 768px)
  .shade_panel
    overflow hidden
    .login-box
      position relative
      width 500px
      height 300px
      margin 0 auto
      top 50%
      transform translateY(-50%)
      header
        padding-top 5px