.shade_panel
  position fixed
  top 0
  left 0
  bottom 0
  right 0
  background-color rgba(0, 0, 0, .2)
  .login-box
    border-radius 10px
    background-color white
    .input-box
      margin 15px      
      input
        width 300px
        height 35px
        padding 10px
        border-radius 5px
        transition all .3s
        border 1px solid #d9d9d9
        &:hover
          border-color #40a9ff
          box-shadow 0 0 5px #40a9ff
    footer
      padding-top 15px
      .btn-box
        line-height 37px
      
@media screen and (max-width: 767px)
  .shade_panel
    display flex
    justify-content center
    align-items center
    .login-box
      width 50%
      min-width 200px
      height 47%
      header
        margin-top 23px
      .input-box
        .label-head
          display none
        input
          width 100%
@media screen and (min-width: 768px)
  .shade_panel
    overflow hidden
    .login-box
      position relative
      width 500px
      height 280px
      margin 0 auto
      top 50%
      transform translateY(-50%)
      header
        padding 20px