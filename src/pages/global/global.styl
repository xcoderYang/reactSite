html, body
  height 100%
  width 100%
a, abbr, acronym, address, applet, article, aside, audio, b, big, blockquote, body, canvas, caption, center, cite, code, dd, del, details, dfn, div, dl, dt, em, input, embed, fieldset, figcaption, figure, footer, form, h1, h2, h3, h4, h5, h6, header, html, i, iframe, img, ins, kbd, label, legend, li, mark, menu, nav, object, ol, output, p, pre, q, ruby, s, samp, section, small, span, strike, strong, sub, summary, sup, table, tbody, button, td, tfoot, th, thead, time, tr, tt, u, ul, var, video, h1, h2, h3, h4, h5, h6, select
  margin 0
  padding 0
  font-family "Lato", "Microsoft JhengHei", "Noto-Sans-CJK-JP", "Noto-Sans-Thai", sans-serif
  font-weight normal
  vertical-align baseline
  box-sizing border-box
  border 0

article, aside, details, figcaption, figure, footer, header, main, menu, nav, section, summary
  display block

.txt-center
  text-align center
.input-box
  margin 10px
  input
    width 200px
    height 25px
    border-radius 5px
    transition all .3s
    border 1px solid #d9d9d9
    &:hover
      border-color #40a9ff